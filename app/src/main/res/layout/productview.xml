<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="0dp"
    app:cardCornerRadius="0dp"
    android:paddingRight="0dp"
    android:background="#ffff"
    android:id="@+id/procard"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/proimage"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/testimg"/>
        <TextView
            android:id="@+id/proname1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="Product Name"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:text="description"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="23dp"
                android:background="@drawable/rupeeindia"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/proprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200000"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="-28dp">
            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                android:id="@+id/proquantity"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                app:backGroundColor="#f95318"
                app:initialNumber="1"
                app:finalNumber="20"
                app:textSize="8sp" />
        </LinearLayout>
        <com.varunest.sparkbutton.SparkButton
            android:id="@+id/wish"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            app:sparkbutton_activeImage="@drawable/ic_heart_on"
            app:sparkbutton_iconSize="30dp"
            app:sparkbutton_inActiveImage="@drawable/ic_heart_off"
            app:sparkbutton_primaryColor="@color/heart_primary_color"
            app:sparkbutton_secondaryColor="@color/heart_secondary_color" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
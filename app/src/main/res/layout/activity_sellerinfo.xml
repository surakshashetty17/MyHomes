<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sellerinfo">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seller Info"
            android:textColor="#000"
            android:textSize="21sp"
            android:textStyle="normal" />

    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="414dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="82dp"
                android:layout_height="62dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/seller" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:text="Retailnet"
                    android:textColor="#262020"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Quality, value and an assured superior shopping experiance with retailnet."
                    android:textColor="#262020" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="17dp"
                    android:layout_marginLeft="10dp"
                    android:text="Banglore,India" />


            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="Categories"
                android:layout_marginLeft="10dp"
                android:textColor="#262020"
                android:layout_marginTop="10dp">

            </TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="415dp"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycle"
        app:layout_constraintVertical_bias="0.994">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:text="Seller Ratings and review"
            android:textSize="19sp"
            android:layout_marginLeft="10dp"
            android:textColor="#262020"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:textSize="15sp"
            android:layout_marginLeft="70dp"
            android:text="640 customers ratings and reviews"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:text="Very Good"
                android:textSize="18sp"
                android:layout_marginLeft="70dp"
                android:textColor="#262020"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:textSize="12sp"
                android:text="Good product and also fast delivery"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
            <Button
                android:id="@+id/button2"
                android:layout_width="138dp"
                android:layout_height="36dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/button"
                android:text="Helpful" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="138dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/button"
                    android:text="Report" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>